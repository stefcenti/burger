<div class="jumbotron">
  <div class="image">
    <img src="assets/img/burger.png" class="img-rounded" id="burger-pic" alt="Burger Image">
  </div>
  <br>
  <h3>Eat-Da-Burger!</h3>
</div>

<!-- <h2>Yummy Burgers to Devour!</h2> -->

<div class="container"> 
  <div class="not-devoured">

  <ol>
    {{#each burgers}}
      {{#unless this.devoured}}
            <li>
              <div class="row burger-name">
                <div class="col-xs-7 col-md-8">

                <!-- <div style="float:left; width:60%;"> -->
                    {{this.burger_name}}
                </div>
                <div class="col-xs-3 col-md-4">
                <!-- <div style="float:right; width: 30%;"> -->
                  <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                    <!-- <div class="form-group"> -->
                      <!-- {{this.burger_name}} -->
                      <input type="hidden" name="devoured" value="true">
                      <button type="submit" class="burger-button">DEVOUR ME!</button>
                    <!-- </div> -->
                  </form>
                </div>
              </div>
            </li>
      {{/unless}}
    {{/each}}
  </ol>

  </div>

  <div class="devoured">
  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
          <li>
            <input type="hidden" name="devoured" value="false">
            {{this.burger_name}}
          </li>
     {{/if}}
    {{/each}}
  </ol>
  </div>

</div>

<form class="create-update-form" action="burgers/create" method="POST">
  <h4>Add a Burger</h4>

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>
